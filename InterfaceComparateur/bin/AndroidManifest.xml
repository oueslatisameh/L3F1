<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.interfacecomparateur"
    android:versionCode="1"
    android:versionName="1.0" >

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_barcode"
        android:label="@string/string_app_name"
        android:theme="@style/AppTheme" >
        <activity 
            android:name="com.interfacecomparateur.Accueil"
            android:screenOrientation="portrait" >
              <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
           
       
        </activity>
        
        <activity
            android:name="com.interfacecomparateur.InscriptionActivity"
            android:windowSoftInputMode="stateHidden" 
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.interfacecomparateur.profile.ProfilActivity"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.interfacecomparateur.search.RechercheActivity"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.interfacecomparateur.card.CardActivity"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.interfacecomparateur.card.BarcodeCardActivity"
            android:configChanges="orientation|screenSize" />
        
         <activity 
            android:name="com.interfacecomparateur.card.BrandActivity"
            android:screenOrientation="portrait" />
         
         <activity 
            android:name="com.interfacecomparateur.card.CardScanActivity"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.interfacecomparateur.ConnectionActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.interfacecomparateur.ForgetPasswordActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.interfacecomparateur.profile.ChangePasswordActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        
        <activity  
           android:name="com.interfacecomparateur.barcodescanner.ScanActivity" 
           android:screenOrientation="portrait"/>
        
        <activity  
           android:name="com.interfacecomparateur.produit.ProduitScanActivity"
           android:windowSoftInputMode="adjustPan"
           android:screenOrientation="portrait" />
        
        <activity  
           android:name="com.interfacecomparateur.produit.ProduitRechercheActivity"
           android:screenOrientation="portrait" />
        
        <activity  
           android:name="com.interfacecomparateur.list.ListActivity"
           android:screenOrientation="portrait" />
        
        <activity  
           android:name="com.interfacecomparateur.list.ListProduitActivity"
           android:screenOrientation="portrait" />
        
        <activity  
           android:name="com.interfacecomparateur.produit.AjoutListActivity"
           android:screenOrientation="portrait" />
        
        <activity  
           android:name="com.interfacecomparateur.produit.AjoutProduitScanActivity"
           android:screenOrientation="portrait" />
        
         <meta-data
           android:name="com.facebook.sdk.ApplicationId"
           android:value="@string/app_id" />

        <activity 
           android:name="com.facebook.LoginActivity" />
        
        <activity  
           android:name="com.interfacecomparateur.map.CarteActivity" />
        
        <activity  
           android:name="com.interfacecomparateur.produit.ListResultActivity"
           android:screenOrientation="portrait" />
        
        <activity 
           android:name="com.interfacecomparateur.profile.AdresseFavoriteActivity"
           android:screenOrientation="portrait" />
        
        <activity 
           android:name="com.interfacecomparateur.profile.MagasinFavoriActivity"
           android:screenOrientation="portrait" />
        
        <activity 
           android:name="com.interfacecomparateur.profile.RechercheMagasinActivity"
           android:screenOrientation="portrait" />
        
        <activity 
           android:name="com.interfacecomparateur.profile.AjoutAdresseFavoriteActivity"
           android:screenOrientation="portrait" />
        
    </application>

</manifest>
