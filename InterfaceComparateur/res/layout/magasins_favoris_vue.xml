<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@drawable/border"
        android:orientation="horizontal" >
        
         <LinearLayout
           android:layout_height="@dimen/bar_height"
           android:layout_width="match_parent"
           android:layout_weight="1.0" >

            <ImageButton
                android:id="@+id/button_back"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/buttonStyle"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_previous_item"
                android:contentDescription="@string/string_drawable_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/string_favorite_shop"
                android:textColor="@color/white"
                android:textSize="@dimen/bar_editText_text_size" />
         
            </LinearLayout>
            
         <ImageButton
            android:id="@+id/button_add"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0.0"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            style="@style/buttonStyle"
            android:src="@drawable/ic_action_new"
            android:contentDescription="@string/string_drawable_menu_add" />
         
    </LinearLayout>

    <ListView
       android:id="@+id/listview_magasins_favoris"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="@dimen/small_padding" />
    
    <ProgressBar
       android:id="@+id/progressBar"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="160dp" />
    
    <TextView
       android:id="@+id/error_textview"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="0.0"
       android:padding="10dp"
       android:background="@color/custom_red"
       android:textColor="@color/white"
       android:visibility="gone" />
        
</LinearLayout>          